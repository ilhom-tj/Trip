<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TripButtonBlack" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/sf_ui</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="backgroundTint">#212121</item>
    </style>

    <style name="TripButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="fontFamily">@font/sf_ui</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="backgroundTint">#EEEEEE</item>
    </style>

    <style name="WeekDayStyle">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8A979797</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_ui</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
    </style>

    <style name="CalendarDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>
</resources>