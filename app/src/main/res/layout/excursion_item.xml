<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintDimensionRatio="16:9">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/city"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="4:3"
            android:foreground="@drawable/dark_gradient_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imageView"/>

    <TextView

            android:text="Фото прогулка Чаруеший Калининград"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22sp"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:id="@+id/excursion_title"/>
    <FrameLayout
            android:background="@drawable/review_corner_small"
            android:layout_width="wrap_content"
            android:paddingStart="16dp"
            android:layout_marginTop="5dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/excursion_title"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:id="@+id/review_qty"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="8.9 - 2123 отзыва"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>


    <TextView

            android:text="3 098 Р"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="35sp"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:id="@+id/excurse_price"
            app:layout_constraintBottom_toTopOf="@+id/guide"/>
    <TextView
            android:id="@+id/guide"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Организатор:"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/excurse_price"/>
    <TextView
            android:id="@+id/guide_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Тимур"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guide"
            app:layout_constraintStart_toEndOf="@+id/guide" app:layout_constraintTop_toTopOf="@+id/guide"/>
    <TextView
            android:id="@+id/guide_duration"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="3,5 часа"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/guide_name"
            android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/excurse_price"/>

</androidx.constraintlayout.widget.ConstraintLayout>