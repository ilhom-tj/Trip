<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".ui.excurseFilter.ExcursionFilterFragment">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                android:background="@drawable/filter_view_border"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filters"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp"
            />
            <androidx.cardview.widget.CardView
                    android:background="#fff"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="1dp"
                    android:translationZ="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Цена за экскурсию"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:id="@+id/textView"
                    />
                    <com.innovattic.rangeseekbar.RangeSeekBar
                            android:id="@+id/rangeSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:rsb_trackSelectedColor="#D1D1D1"
                            app:rsb_trackColor="#D0E6E6E6"
                            app:rsb_minThumbDrawable="@drawable/seekbar_thumb"
                            app:rsb_maxThumbDrawable="@drawable/seekbar_thumb"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            app:layout_constraintStart_toStartOf="@+id/textView"
                            app:layout_constraintEnd_toEndOf="@+id/textView"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="до"
                            android:alpha="0.6"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:id="@+id/price_from_label"
                            app:layout_constraintEnd_toStartOf="@+id/editText2"
                            app:layout_constraintTop_toTopOf="@+id/editText"
                            app:layout_constraintBottom_toBottomOf="@+id/editText"
                            app:layout_constraintStart_toEndOf="@+id/editText"
                            app:layout_constraintHorizontal_bias="0.5"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="от"
                            android:alpha="0.6"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"
                            android:textSize="18sp"
                            android:id="@+id/price_to_label"
                            app:layout_constraintTop_toBottomOf="@+id/rangeSeekBar"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/editText"/>
                    <EditText
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:text="11 400 P"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="50dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/price_view_border"
                            app:layout_constraintStart_toEndOf="@+id/price_to_label"
                            app:layout_constraintTop_toTopOf="@+id/price_to_label"
                            app:layout_constraintBottom_toBottomOf="@+id/price_to_label" android:id="@+id/editText"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/price_from_label"
                            app:layout_constraintVertical_bias="0.4"/>
                    <EditText
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:text="11 400 P"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="50dp"
                            android:layout_marginEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/price_view_border"
                            app:layout_constraintTop_toTopOf="@+id/price_from_label"
                            app:layout_constraintBottom_toBottomOf="@+id/price_from_label"
                            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editText2"
                            app:layout_constraintStart_toEndOf="@+id/price_from_label"
                            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.4"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</FrameLayout>