        <shape android:shape="rectangle">
            <stroke
                    android:width="1.9dp"
                    android:color="#FAFBFBFB"/>
            <corners
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
            />
            <solid android:color="#FAFBFBFB"/>
        </shape>
    </item>
</layer-list>